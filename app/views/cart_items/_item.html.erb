<tr>
  <td><%= cart_item.product.product_name %></td>
  <td><%= number_to_currency(cart_item.unit_price) %></td>
  <td><%= cart_item.quantity %></td>
  <td><%= number_to_currency(cart_item.total_price) %></td>
  <td>
    <%= button_to "Sil", cart_cart_item_path(cart_item.cart, cart_item), method: :delete, data: { confirm: "Bu ürünü kaldırmak istediğine emin misin?" }, class: "btn delete" %>
  </td>
</tr>
