<% if product.units_in_stock? %>
  <p><%= product.units_in_stock %> in stock</p>
<% else %>
  <p>Out of stock</p>
  <p>Email me when available.</p>
  <%= form_with model: [product, Subscriber.new] do |form| %>
    <%= form.email_field :email, placeholder: "you@example.com", required: true %>
    <%= form.submit "Submit" %>
  <% end %>
<% end %>