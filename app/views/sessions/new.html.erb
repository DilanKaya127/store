<div class="form-container">
  <div class="auth-form">
    <h2 class="form-title">Giriş Yap</h2>
    <%= form_with url: session_path, local: true do |form| %>
      <div class="field-group">
        <%= form.label :email_address, "E-posta", class: "field-label" %>
        <%= form.email_field :email_address, required: true, autofocus: true, class: "form-input", autocomplete: "username", placeholder: "E-posta adresinizi girin", value: params[:email_address] %>
      </div>
      <div class="field-group">
        <%= form.label :password, "Şifre", class: "field-label" %>
        <%= form.password_field :password, required: true, class: "form-input", autocomplete: "current-password", placeholder: "Şifrenizi girin", maxlength: 72 %>
      </div>
      <%= link_to "Şifreni mi unuttun?", new_password_path %>
      <div class="actions">
        <%= form.submit "Giriş Yap", class: "submit-button" %>
      </div>
    <% end %>
    <%= link_to "Yeni misin?", new_user_path, data: {turbo: false} %>
  </div>
</div>
