<div class="cart-main-wrapper">
  <%= render partial: "cart_items/item" %>
  <div class="cart-summary-section">
    <div class="cart-details">
      <p><strong>Oluşturulma:</strong> <%= @cart.created_at.strftime("%d %B %Y, %H:%M") %>
      </p><p><strong>İndirim:</strong> <%= @cart.discount_applied ? "Uygulandı" : "Yok" %></p>
      <hr>
      <p><strong>Toplam Tutar:</strong> <%= number_to_currency(@cart.total_price || 0) %></p>
      
    </div>
    <div class="cart-actions">
      <%= link_to "Alışverişe Devam Et", products_path, class: "btn btn-secondary" %>
      <%= link_to "Satın Al", checkout_cart_path(@cart), method: :post, class: "btn btn-primary" %>
    </div>
  </div>
</div>
