<h1>Tüm Sepetler</h1>

<table class="cart-table">
  <thead>
    <tr>
      <th>Kullanıcı</th>
      <th>Durum</th>
      <th>Toplam</th>
      <th>İşlemler</th>
    </tr>
  </thead>
  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.status %></td>
        <td><%= number_to_currency(cart.total_price || 0) %></td>
        <td>
          <%= link_to "Görüntüle", cart_path(cart), class: "btn" %>
          <%= link_to "Düzenle", edit_cart_path(cart), class: "btn" %>
          <%= link_to "Sil", cart_path(cart), method: :delete, data: { confirm: "Silmek istediğine emin misin?" }, class: "btn delete" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
